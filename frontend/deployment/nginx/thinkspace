server {
    listen      80;
    listen [::]:80;

    server_name  thinkspace.test.com;
    access_log  /var/log/nginx/thinkspace.access.log;
    error_log /var/log/nginx/thinkspace.error.log;

    root /var/www/html/thinkspace;
    index index.html;

    location / {
       try_files $uri /index.html;
    }

    location /django_static {
        autoindex on;
        alias /django_static/;
    }

    location /api {
        proxy_pass http://localhost:8000;
    }

    location /admin {
        proxy_pass http://localhost:8000;
    }
}
